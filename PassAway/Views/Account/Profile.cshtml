@model RegisterModel

<div class="container">
    <h1>Edit Profile</h1>
    <hr>
    <div class="row">
        <!-- left column -->
        <div class="col-md-3">
            <div class="text-center">
                <img src="//placehold.it/100" class="avatar img-circle" alt="avatar">
                <h6>Upload a different photo...</h6>

                <input type="file" class="form-control">
            </div>
        </div>

        <!-- edit form column -->
        <div class="col-md-9 personal-info">
            <div class="alert alert-info alert-dismissable">
                <a class="panel-close close" data-dismiss="alert">×</a>
                <i class="fa fa-coffee"></i>
            </div>

            <h3>Personal info</h3>

            <form asp-controller="Account" asp-action="EditProfile" method ="post" class="form-horizontal" role="form">

                <div class="form-group">
                    <label class="col-lg-3 control-label">Name:</label>
                    <div class="col-lg-8">
                        <input asp-for="Name" class="form-control" type="text" value="@Model.Name">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-offset-2 col-xs-10">
                        <div class="radio">
                            <label>
                                <input asp-for="Gender" type="radio" name="Gender" value="Male"> Male
                            </label>
                            <label>
                                <input asp-for="Gender" type="radio" name="Gender" value="Female"> Female
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group col-xs-12">
                    <label asp-for="DOB" for="DOB" name="dateofbirth" class="col-xs-2">DOB (DD/MM/YYYY)</label>
                    <input asp-for="DOB" type="date" class="form-control col-xs-10" id="DOB" placeholder="" value="@Model.DOB">
                </div>

                <div class="form-group col-xs-12">
                    <label asp-for="Country" for="Country" class="col-xs-2">Country</label>
                    <input asp-for="Country" type="text" class="form-control col-xs-10" id="Country" placeholder="" value="@Model.Country">
                </div>


                <div class="form-group col-xs-12">
                    <label asp-for="Address" for="Address" class="col-xs-2">Address</label>
                    <input asp-for="Address" type="text" class="form-control col-xs-10" id="Address" placeholder="" value="@Model.Address">
                </div>

                <div class="form-group col-xs-12">
                    <div class="col-xs-offset-2 col-xs-10">
                        <button type="submit" class="btn btn-default">Save</button>
                    </div>
                </div>

            </form>

            <form asp-controller="Account" asp-action="EditEmail" method ="post" class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-lg-3 control-label">Email:</label>
                    <div class="col-lg-8">
                        <input asp-for="Email" class="form-control" type="text" value="@Model.Email">
                    </div>
                </div>

                <div class="form-group col-xs-12">
                    <div class="col-xs-offset-2 col-xs-10">
                        <button type="submit" class="btn btn-default">Save</button>
                    </div>
                </div>

            </form>

            <form asp-controller="Account" asp-action="EditPassword" method="post" class="form-horizontal" role="form">

                <div class="form-group">
                    <label class="col-md-3 control-label">New password:</label>
                    <div class="col-md-8">
                        <input asp-for="Password" class="form-control" type="password" value="">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Confirm new password:</label>
                    <div class="col-md-8">
                        <input asp-for="ConfirmedPassword" class="form-control" type="password" value="">
                    </div>
                </div>

                <div class="form-group col-xs-12">
                    <div class="col-xs-offset-2 col-xs-10">
                        <button type="submit" class="btn btn-default">Save</button>
                    </div>
                </div>

            </form>

        </div>
    </div>
</div>
<hr>
