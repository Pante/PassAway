
@model RegisterModel
<div class="login-html">
    <input id="tab-2" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab"></label>
    <input id="tab-2" type="radio" name="tab" class="sign-up" checked><label for="tab-2" class="tab" >Register</label>
    <div class="login-form">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            <div class="sign-up-htm">
                <div class="group">
                    <label asp-for="Name" class="label">Name</label>
                    <input asp-for="Name" id="user" type="text" class="input">
                </div>
                <div class="group">
                    <label asp-for="Email" class="label">Email Address</label>
                    <input asp-for="Email" id="user" type="text" class="input">
                </div>
                <div class="group">
                    <label asp-for="Password" class="label">Password</label>
                    <input asp-for="Password" id="pass" type="text" class="input" >
                </div>
                <div class="group">
                    <label asp-for="Gender" class="label">Gender</label>
                    <input asp-for="Gender" type="text" class="input">
                </div>
                <div class="group">
                    <label asp-for="Country" class="label">Country</label>
                    <input asp-for="Country"  type="text" class="input">
                </div>
                <div class="group">
                    <label asp-for="DOB" class="label">Date Of Birth</label>
                    <input asp-for="DOB"  type="text" class="input">
                </div>
                <div class="group">
                    <label asp-for="Address" class="label">Address</label>
                    <input asp-for="Address" type="text" class="input">
                </div>
                <div class="group">
                    <input type="submit" class="button" value="Register">
                </div>
                <div class="hr"></div>
            </div>
        }
    </div>
</div>