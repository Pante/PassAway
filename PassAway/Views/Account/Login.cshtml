@model LoginModel
<div class="login-html">
    <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Login</label>
    <input id="tab-2" type="radio" name="tab" class="sign-up" hidden="hidden"><label for="tab-2" class="tab" hidden="hidden"></label>
    <div class="login-form">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
        <div class="sign-in-htm">
            <div class="group">
                <label asp-for="Email" class="label">Email Address</label>
                <input asp-for="Email" type="text" class="input">
            </div>
            <div class="group">
                <label asp-for="Password" class="label">Password</label>
                <input asp-for="Password" id="pass" type="password" class="input" data-type="password">
            </div>
            <div class="group">
                <input id="check" type="checkbox" class="check" checked>
                <label for="check"><span class="icon"></span> Keep me Signed in</label>
            </div>
            <div class="group">
                <input type="submit" class="button" value="Login">
                @*<button class="btn btn-primary" type="submit">Log In</button>*@
            </div>
            <div class="hr"></div>
            <div class="foot-lnk">
                <a href="#forgot">Forgot Password?</a>
            </div>
        </div>
        }
    </div>
</div>

