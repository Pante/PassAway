@model LoginModel

<form asp-action="Login" method="post">
    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />

    <div class="form-group col-xs-12">
        <label asp-for="Email" for="inputEmail3" class="col-xs-2">Email</label>
        <input asp-for="Email" type="text" class="form-control col-xs-10">
    </div>

    <div class="form-group col-xs-12">
        <label asp-for="Password" for="inputPassword3" class="col-xs-2">Password</label>
        <input asp-for="Password" type="password" class="form-control col-xs-10" >
    </div>

    <div class="form-group">
        <div class="col-xs-offset-2 col-xs-10">
            <div class="checkbox">
                <label>
                    <input type="checkbox"> Remember me
                </label>
            </div>
        </div>
    </div>

    <div class="form-group col-xs-12">
        <div class="col-xs-offset-2 col-xs-10">
            <button type="submit" class="btn btn-default">Sign in</button>
        </div>
    </div> 

</form>