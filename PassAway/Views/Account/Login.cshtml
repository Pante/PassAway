@model LoginModel
<div class="form-group col-xs-12">
    <label for="inputEmail3" class="col-xs-2">Email</label>
    <input type="email" class="form-control col-xs-10" id="inputEmail3" placeholder="Email">
</div>
<div class="form-group col-xs-12">
    <label for="inputPassword3" class="col-xs-2">Password</label>
    <input type="password" class="form-control col-xs-10" id="inputPassword3" placeholder="Password">
</div>
<div class="form-group">
    <div class="col-xs-offset-2 col-xs-10">
        <div class="checkbox">
            <label>
                <input type="checkbox"> Remember me
            </label>
        </div>
    </div>
</div>
<div class="form-group col-xs-12">
    <div class="col-xs-offset-2 col-xs-10">
        <button type="submit" class="btn btn-default">Sign in</button>
    </div>
</div> 
